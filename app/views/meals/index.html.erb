<div class="page-header">
  <h1>
    Meals
    <a href="/meals/new" class="btn btn-lg btn-success">New Meal</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Dish</th>
        <th>Venue</th>
        <th>Actions</th>
      </tr>

      <% @meals.each do |meal| %>
      <tr>
        <td>
          <% if meal.dish.present? %>
            <a href="/dishes/<%= meal.dish.id %>">
              <%= meal.dish.cuisine_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if meal.venue.present? %>
            <a href="/venues/<%= meal.venue.id %>">
              <%= meal.venue.neighborhood_id %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/meals/<%= meal.id %>" class="btn btn-primary">Show</a>
          <a href="/meals/<%= meal.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_meal/<%= meal.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @meals, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
